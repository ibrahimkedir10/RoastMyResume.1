<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/site.css" /> <!-- Reference your style.css file here -->
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="container">
        <div class="content">
            <div class="image-box">
                <!-- Add your image box content here -->
           
            </div>

        <div>
            <h1>User Profile</h1>
        </div>

        <div>
            <input type="text" id="txtName" placeholder="Enter your name" />
        </div>

        <div>
            <input type="email" id="txtEmail" placeholder="Enter your email" />
        </div>

        <div>
            <input type="file" id="txtFile" accept=".pdf,.jpg,.png" />
        </div>

        <div>
            <p>Upload a resume (PDF or image):</p>
        </div>

        <div>
            <img id="imgViewer" alt="User Resume" width="200" height="200" />
        </div>

        <div>
            <button id="btnSave" class="btn btn-primary">Upload Resume</button>
        </div>

        <!-- Add a button to view other resumes -->
        <div>
            <a href="@Url.Action("Home")" class="btn btn-secondary">View Other Resumes</a>
        </div>
    </div>
    </div>

    <!-- Include jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- JavaScript Code -->
    <script type="text/javascript">
        // JavaScript code for uploading resumes and other functions
    </script>
</body>
</html>


